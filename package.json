{
  "name": "cargo-toolset",
  "displayName": "cargo-toolset",
  "description": "An extension for running Rust code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rustToolbar",
          "title": "Cargo Toolset",
          "icon": "media/rust.png"
        }
      ]
    },
    "views": {
      "rustToolbar": [
        {
          "type": "webview",
          "id": "rust-toolbar.toolbarView",
          "name": "Cargo Toolset"
        }
      ]
    },
    "commands": [],
    "configuration": {
      "title": "Cargo Toolset",
      "properties": {
        "rust-toolbar.cargoCmdPrefix": {
          "type": "string",
          "default": "cargo",
          "description": "The command prefix to use for Cargo commands (e.g., 'cargo' or 'cross')"
        }
      }
    }
  },
  "scripts": {
    "generate-commands": "node generate-commands.js",
    "vscode:prepublish": "npm run generate-commands && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
